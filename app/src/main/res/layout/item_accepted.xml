<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:weightSum="2">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/rate_pandit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_orange"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="No Rating"
                    android:textColor="@color/white"
                    android:textSize="12sp"

                    android:visibility="gone" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_userImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ut"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="1dp" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/pandit_rating_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/rate_1"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_star"
                        android:tint="@color/gray_btn_bg_color" />

                    <ImageView
                        android:id="@+id/rate_2"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_star"
                        android:tint="@color/gray_btn_bg_color" />

                    <ImageView
                        android:id="@+id/rate_3"

                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_star"
                        android:tint="@color/gray_btn_bg_color" />

                    <ImageView
                        android:id="@+id/rate_4"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_star"
                        android:tint="@color/gray_btn_bg_color" />

                    <ImageView
                        android:id="@+id/rate_5"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_star"
                        android:tint="@color/gray_btn_bg_color" />

                </LinearLayout>
                <TextView
                    android:id="@+id/rate_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_orange"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Rate This User"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/booking_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking ID"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/poojaname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="pooja"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/bookingdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="booking date"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/bookingtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="booking time"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="price"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/withinclue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="include samagri"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_orange"
            android:text="Accept"
            android:textColor="@color/white"
            android:visibility="gone" />


    </LinearLayout>


</androidx.cardview.widget.CardView>